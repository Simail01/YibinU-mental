# YibinU 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=YibinU
DB_CHARSET=utf8mb4

# ==================== 服务配置 ====================
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=false

# ==================== 功能开关 ====================
ENABLE_LLM=true
ENABLE_EMOTION_ANALYSIS=true
ENABLE_RAG=true

# ==================== 模型配置 ====================
BERT_MAX_LEN=512
LLM_MAX_LEN=2048
MAX_NEW_TOKENS=1024

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
